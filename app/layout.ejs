<!-- 連結你的錢包 -->
<!-- AccountModal-phone -->
<!-- 因 header 使用 Bootstrap sticky，如果把 Modal 放在 header 內，z-index 會跟 sticky 同層，
    打開 modal 後的 modal-backdrop z-index 大於 sticky，所以會覆蓋 modal，故移至外層 -->
<div class="modal fade" id="accountModal" tabindex="-1" aria-labelledby="accountModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered vh-100 h-md-auto">
    <div class="modal-content rounded-0 h-100">
      <div class="modal-header justify-content-center mb-4">
        <h5 class="modal-title" id="accountModalLabel">連結你的錢包</h5>
        <button type="button" class="btn-close d-md-none" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container">
          <ul class="row gx-2" id="accountList">
            <li class="col-md-6 mb-2">
              <a href="#!" class="d-flex align-items-center link-black border p-3 btn-hover-check">
                <img src="./assets/images/logo/connect01.png" alt="MetaMask" width="16" height="16" class="me-3">
                <p>MetaMask</p>
              </a>
            </li>
            <li class="col-md-6 mb-2">
              <a href="#!" class="d-flex align-items-center link-black border p-3 btn-hover-check">
                <img src="./assets/images/logo/connect02.png" alt="Coinbase Wallet" width="16" height="16" class="me-3">
                <p>Coinbase Wallet</p>
              </a>
            </li>
            <li class="col-md-6 mb-2">
              <a href="#!" class="d-flex align-items-center link-black border p-3 btn-hover-check">
                <img src="./assets/images/logo/connect03.png" alt="WalletConnect" width="16" height="16" class="me-3">
                <p>WalletConnect</p>
              </a>
            </li>
            <li class="col-md-6 mb-2">
              <a href="#!" class="d-flex align-items-center link-black border p-3 btn-hover-check">
                <img src="./assets/images/logo/connect04.png" alt="Phantom" width="16" height="16" class="me-3">
                <p>Phantom</p>
              </a>
            </li>
            <li class="col-md-6 mb-2">
              <a href="#!" class="d-flex align-items-center link-black border p-3 btn-hover-check">
                <img src="./assets/images/logo/connect05.png" alt="Glow" width="16" height="16" class="me-3">
                <p>Glow</p>
              </a>
            </li>
            <li class="col-md-6 mb-2">
              <a href="#!" class="d-flex align-items-center link-black border p-3 btn-hover-check">
                <img src="./assets/images/logo/connect06.png" alt="Fortmatic" width="16" height="16" class="me-3">
                <p>Fortmatic</p>
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div class="modal-footer justify-content-center border-0 mb-3">
        <a href="#!" class="bg-primary text-white d-block fs-5 py-2 px-4 border w-100 w-lg-auto text-center">連結錢包</a>
      </div>
    </div>
  </div>
</div>